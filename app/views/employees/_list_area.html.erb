<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>e-mail</th>
      <th>Company</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @area.employees.each do |employee| %>
    <tr>
      <td><%= employee.first_name %></td>
      <td><%= employee.last_name %></td>
      <td><%= employee.email %></td>
      <td><%= link_to employee.company.name, employee.company %></td>
      <td><%= link_to 'Delete',
                      company_employee_path(@area,employee),
                      method: :delete,
                      class: 'btn btn-danger',
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
